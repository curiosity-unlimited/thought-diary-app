# Flask Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Environment (development, testing, production)
FLASK_ENV=development

# Flask Secret Key (generate a random string for production)
# Example: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# JWT Secret Key (generate a different random string for production)
# Example: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database URL
# Development (SQLite): sqlite:///dev.db
# Production (PostgreSQL): postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///dev.db

# GitHub Models API Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=your-github-token-here
GITHUB_MODEL_NAME=gpt-4o

# CORS Origins (comma-separated list of allowed origins)
# Development: http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGINS=http://localhost:5173

# Redis URL (optional for development, required for production rate limiting)
# Example: redis://localhost:6379/0
# REDIS_URL=redis://localhost:6379/0
